<% content_for :sidebar_title do %>
  Search
<% end %>

<% content_for :sidebar do %>
  <div id="align-center"></div>
<% end %>

<% content_for :page_title do %>
  <h1 class="page-title">Listing Users</h1>
<% end %>

<% content_for :page_actions do %>
  <li><%= link_to "New Users", new_admin_user_path %></li>
<% end %>

<% if @users.any? %>
<table class="index">
  <colgroup>
    <col style="width: 85%">
    <col style="width: 15%">
  </colgroup>
  <thead>
    <tr>
      <th>User</th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <%= render @users %>
  </tbody>
</table>
<% else %>
  <div class="alpha twelve columns no-objects-found">
    <%= link_to "add_one", new_admin_user_path %>!
  </div>
<% end %>